{
  "name": "VLSI Design Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "desktop"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools"
      ]
    }
  },
  "postAttachCommand": "bash /usr/local/share/desktop-init.sh",
  "postStartCommand": "echo 'Opening chip-tutorials README...' && sleep 2 && code /root/chip-tutorials/README.md"
}
