{
  "name": "VLSI Design Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "desktop"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools"
      ],
      "settings": {
        "workbench.startupEditor": "readme"
      }
    }
  },
  "onCreateCommand": "code /root/chip-tutorials/README.md",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "password": "bananaslugs!",
      "webPort": "6080",
      "vncPort": "5901"
    }
  }
}
